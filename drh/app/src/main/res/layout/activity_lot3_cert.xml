                        android:layout_weight="1"
                        android:entries="@array/appearance"
                        tools:listitem="@layout/support_simple_spinner_dropdown_item" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:text="@string/purity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue"
                        android:textSize="15dp"/>

                    <EditText
                        android:id="@+id/purity_cert_3"
                        android:inputType="numberDecimal"
                        android:textColor="@color/blue"
                        android:textSize="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tlc_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/tlc"
                        android:textColor="@color/blue"
                        android:textSize="15dp" />

                    <Spinner
                        android:id="@+id/spin3_cert_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:entries="@array/appearance"
                        tools:listitem="@layout/support_simple_spinner_dropdown_item" />

                </LinearLayout>


            </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Specification"
            android:textColor="@color/blue"
            android:textStyle="italic"
            android:textSize="25sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/appearance"
                    android:textColor="@color/blue"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/appearance_cert_spec"
                    android:textColor="@color/blue"
                    android:textSize="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="@string/purity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:textSize="15dp"/>

                <EditText
                    android:id="@+id/purity_cert_spec"
                    android:textColor="@color/blue"
                    android:textSize="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="@string/tlc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:textSize="15dp"/>

                <EditText
                    android:id="@+id/tlc_cert_spec"
                    android:textColor="@color/blue"
                    android:textSize="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>

            </LinearLayout>









        </LinearLayout>


        <Button
            android:id="@+id/confirm_cert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Confirm"/>
        <Button
            android:id="@+id/view_cert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="View"/>





    </LinearLayout>
</ScrollView>